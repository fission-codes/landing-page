---
pagination:
  data: collections.posts
  size: 6
  alias: posts
---

{% extends 'layouts/default.njk' %}
{% from "partials/card.njk" import card with context %}
{% from "macros/header.njk" import header with context %}
{% set title = "Blog" %}



{% block header %}
  {{ header() }}
{% endblock %}



{% block content %}
<section>

    <div class="px-8 mx-auto max-w-screen-xl">
        
        <section 
            aria-label="hero" 
            class="my-24">
            <h1 class="text-center text-purple-500 text-heading-sm sm:text-heading-lg md:text-heading-xl">
                Our Blog
            </h1>
        </section>

        <div class="grid grid-cols-12 gap-6">

            {% for post in posts %}
            {{ card(post) }}
            {% endfor %}

        </div>
    </div>
</section>

