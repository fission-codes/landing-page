{% from "macros/icons/ArrowRightCircle.njk" import ArrowRightCircle %}

{% macro NewsletterForm() %}
  <section 
    aria-label="newsletter"
    class="mx-auto md:py-[264px] max-w-xl flex flex-col gap-2">
    <h4 class="text-2xl text-center font-medium">Never Miss a Beat</h4>
    <p class="text-center">Sign up for our newsletter to keep a pulse on what we're doing, where we'll be next, and interesting things we've found.</p>
    <form class="newsletter-form w-full relative mt-6" data-members-form>
        <input placeholder="Enter your email" data-members-email type="email" required="true" id="email" name="email" class="input input-bordered font-normal pl-[25px] pr-[70px] relative z-10 h-[66px] text-[20px] rounded-full bg-neutral-0 text-neutral-500 placeholder:text-neutral-500 border-neutral-700 w-full" />
        <button aria-label="submit-newsletter-form" name="submit-newsletter-form" class="absolute z-20 right-[18px] top-1/2 -translate-y-1/2 transition-opacity hover:opacity-90 text-neutral-500" type="submit">{{ ArrowRightCircle() }}</button>
    </form>
  </section>
{% endmacro %}
