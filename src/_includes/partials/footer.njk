<!-- Footer -->
<section class="mt-16">

    <div class="mx-auto max-w-[1536px]">
        
        <!-- Newsletter -->
        <div class="2xl:rounded-bl-lg 2xl:rounded-br-lg overflow-hidden">

            <svg width="0" height="0">
                <clipPath id="footerArch" clipPathUnits="objectBoundingBox">
                    <path d="M1,0.727 V1 H0 V0.727 C0,0.326,0.224,0,0.5,0 C0.776,0,1,0.326,1,0.727"></path>
                </clipPath>
            </svg>

            <div class="bg-newpurple-500 h-0 pb-[68%] [clip-path:url(#footerArch)]">
                {{ NewsletterForm() }}
