{% macro card(post) %}

<div class="relative col-span-12 mb-10 md:col-span-6 lg:col-span-4">
    <a href="/blog{{ post.url }}" class="relative block w-full h-64 overflow-hidden rounded">
        <img class="object-cover object-center w-full h-full transition duration-500 ease-out transform scale-100 hover:scale-105" src="{{ post.feature_image }}" alt="{{ post.title }}">
    </a>
    {# <p class="text-xs font-bold text-gray-400 uppercase">{% if post.tags %}{% for tag in post.tags %}{{ tag.name }} {% endfor %}{% endif %}</p> #}
    <a href="/blog{{ post.url }}" class="block text-xl font-medium leading-tight mt-5">{{ post.title }}</a>
    <div class="post-card-excerpt mt-4 opacity-70">
        <p>{{ post.excerpt }}</p>
    </div>
</div>
{% endmacro %}
